        }
        h2 {
            color: #5d4037;
        }
        .faq {
            background: #faf0de; /* Cream color for the FAQ box */
            border-radius: 5px;
            margin-bottom: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .question {
            font-family: 'Poppins', sans-serif; /* Use Poppins for questions */
            cursor: pointer;
            padding: 15px;
            border-bottom: 1px solid #ddd;
            background: #fde8c8; /* Light cream color for questions */
            color: #3e2723; /* Darker text for contrast */
            transition: background 0.3s;
        }
        .question:hover {
            background: #f6ce92; /* Slightly darker on hover */
        }
        .answer {
            height: 0;
            opacity: 0;
            transition: height 0.3s ease-out, opacity 0.3s ease-out;
            padding: 0 15px;
            background: #fff; /* White background for answers */
            overflow: hidden;
        }
        .answer.open {
            height: auto; /* Allow height to adjust */
            opacity: 1; /* Fade in effect */
            padding: 10px 15px;
        }
    </style>
